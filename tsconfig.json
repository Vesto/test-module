    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",

    "strictNullChecks": true,
    "noImplicitAny": true,

    "outDir": "dist/",
    "declaration": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}